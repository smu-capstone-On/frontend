<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/post_title"
        android:layout_width="wrap_content"
        android:layout_height="23sp"
        android:maxWidth="150sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="제목"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/post_content"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="내용을 입력하세요\n내용을 입력하세요\n내용을 입력하세요"
        android:textColor="@color/hint"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/post_title"
        app:layout_constraintTop_toBottomOf="@id/post_title"/>

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_5_transparent"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/post_tag1"
        android:layout_width="41dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/radius_10_stroke_gray"
        android:gravity="center"
        android:text="tag1"
        android:textColor="@color/hint"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/post_content"
        app:layout_constraintTop_toBottomOf="@id/post_content" />

    <TextView
        android:id="@+id/post_tag2"
        android:layout_width="41dp"
        android:layout_height="16dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/radius_10_stroke_gray"
        android:gravity="center"
        android:text="tag2"
        android:textColor="@color/hint"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/post_tag1"
        app:layout_constraintStart_toEndOf="@id/post_tag1"/>

    <TextView
        android:id="@+id/post_tag3"
        android:layout_width="41dp"
        android:layout_height="16dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/radius_10_stroke_gray"
        android:gravity="center"
        android:text="tag3"
        android:textColor="@color/hint"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/post_tag2"
        app:layout_constraintStart_toEndOf="@id/post_tag2"/>
    
    <TextView
        android:id="@+id/post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="nnnn.nn.nn"
        android:textColor="@color/hint"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/post_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/post_image_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10sp"
        android:src="@drawable/svg_thumbs"
        app:layout_constraintStart_toStartOf="@id/post_image"
        app:layout_constraintTop_toBottomOf="@id/post_image" />

    <TextView
        android:id="@+id/post_text_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="n"
        android:textColor="@color/hint"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/post_image_thumb"
        app:layout_constraintTop_toTopOf="@id/post_image_thumb" />

    <ImageView
        android:id="@+id/post_image_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/svg_message"
        app:layout_constraintStart_toEndOf="@id/post_text_thumb"
        app:layout_constraintTop_toTopOf="@id/post_text_thumb" />

    <TextView
        android:id="@+id/post_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="n"
        android:textColor="@color/hint"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/post_image_message"
        app:layout_constraintTop_toTopOf="@id/post_image_message" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

