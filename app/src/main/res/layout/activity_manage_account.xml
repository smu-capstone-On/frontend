<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/account_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:title="계정 관리"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/account_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="10dp"
        android:text="계정 정보"
        android:textColor="@color/hint"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/account_text_mail"
        app:layout_constraintStart_toStartOf="@id/account_text_mail" />

    <TextView
        android:id="@+id/account_text_mail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="45dp"
        android:background="@color/white"
        android:gravity="start"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_title" />

    <TextView
        android:id="@+id/account_tv_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="smu2024@email.com"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/account_text_mail"
        app:layout_constraintTop_toTopOf="@id/account_text_mail" />

    <TextView
        android:id="@+id/account_tv_change_id"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingTop="9dp"
        android:text="아이디 변경"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_text_mail" />

    <TextView
        android:id="@+id/account_tv_change_pw"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingTop="9dp"
        android:text="비밀번호 변경"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_tv_change_id" />

    <ImageButton
        android:id="@+id/account_btn_change_id"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/account_tv_change_id"
        app:layout_constraintTop_toTopOf="@id/account_tv_change_id"
        app:srcCompat="@drawable/svg_chevron_right" />

    <ImageButton
        android:id="@+id/account_btn_change_pw"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/account_tv_change_pw"
        app:layout_constraintTop_toTopOf="@id/account_tv_change_pw"
        app:srcCompat="@drawable/svg_chevron_right" />

</androidx.constraintlayout.widget.ConstraintLayout>