<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">

    <!-- 로그인 제목 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:title="로그인"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:titleTextColor="@color/white"/>

    <TextView
        android:id="@+id/login_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="아이디"
        android:textColor="@color/titletext"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/login_edit_id"
        app:layout_constraintStart_toStartOf="@id/login_edit_id" />

    <EditText
        android:id="@+id/login_edit_id"
        android:layout_width="288dp"
        android:layout_height="33dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/radius_5_stroke_gray"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingStart="8dp"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="회원정보가 일치하지 않습니다"
        android:textColor="@color/red"
        android:textSize="10sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/login_edit_pwd"
        app:layout_constraintTop_toBottomOf="@id/login_auto_checkbox" />


    <TextView
        android:id="@+id/login_text_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="비밀번호"
        android:textColor="@color/titletext"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/login_edit_pwd"
        app:layout_constraintStart_toStartOf="@id/login_edit_pwd" />

    <EditText
        android:id="@+id/login_edit_pwd"
        android:layout_width="288dp"
        android:layout_height="33dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/radius_5_stroke_gray"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@id/login_edit_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 자동로그인 -->
    <CheckBox
        android:id="@+id/login_auto_checkbox"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:button="@null"
        android:background="@drawable/custom_checkbox"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@id/login_edit_pwd"
        app:layout_constraintStart_toStartOf="@id/login_edit_pwd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="자동 로그인"
        android:textColor="@color/hint"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/login_auto_checkbox"
        app:layout_constraintStart_toEndOf="@+id/login_auto_checkbox"
        app:layout_constraintTop_toTopOf="@+id/login_auto_checkbox" />

    <Button
        android:id="@+id/login_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#00FF0000"
        android:gravity="center"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="회원가입"
        android:textColor="@color/hint"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/login_find_id"
        app:layout_constraintTop_toBottomOf="@id/login_edit_pwd" />
    <View
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="1dp"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@id/login_signup"
        app:layout_constraintTop_toTopOf="@id/login_find_id"/>

    <!-- 계정 찾기 -->
    <Button
        android:id="@+id/login_find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:background="#00FF0000"
        android:text="ID 찾기"
        android:textColor="@color/hint"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/login_edit_pwd"
        app:layout_constraintEnd_toStartOf="@id/login_find_pwd" />
    <View
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="1dp"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@id/login_find_id"
        app:layout_constraintTop_toTopOf="@id/login_find_id"/>

    <!-- 비밀번호 찾기 -->
    <Button
        android:id="@+id/login_find_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00FF0000"
        android:text="PW 찾기"
        android:textColor="@color/hint"
        android:textSize="10sp"
        android:gravity="center"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintEnd_toEndOf="@id/login_edit_pwd"
        app:layout_constraintTop_toBottomOf="@id/login_edit_pwd" />

    <!-- 로그인 버튼-->
    <Button
        android:id="@+id/login_loginbtn"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:background="@drawable/radius_10_solid_yellow"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/login_edit_pwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/login_kakao_loginbtn"
        android:layout_width="288dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/kakao_login"
        app:layout_constraintTop_toBottomOf="@id/login_loginbtn"
        app:layout_constraintStart_toStartOf="@id/login_loginbtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>