<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="@color/yellow" android:width="1dp"/>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/yellow"/>
                </shape>
            </item>
            <item android:drawable="@drawable/custom_check_white" android:top="1dp"
                android:bottom="1dp" android:start="1dp" android:end="1dp" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="#A9A9A9" android:width="1dp"/>
                    <corners android:radius="2dp" />
                    <solid android:color="#CACACA"/>
                </shape>
            </item>
            <item android:drawable="@drawable/custom_check_white" android:top="1dp"
                android:bottom="1dp" android:start="1dp" android:end="1dp" />
        </layer-list>
    </item>
</selector>